<% if (error) { %>
  <div class="alert alert-danger text-center" role="alert"><%= error %></div>
<% } %>

<section class="container">
  <h1>Edit Lolplay</h1>
  <form action="/lolplays/<%= lolplay._id %>" method="post">
    <input type="hidden" name="_method" value="put">

    <div class="form-group">
      <label for="lolplay_title">Title</label>
      <input type="text" class="form-control" id="lolplay_title" name="lolplay[title]" placeholder="Title" value="<%= lolplay.title %>">
    </div>
    <div class="form-group">
      <label for="lolplay_id">Youtube ID</label>
      <input type="text" class="form-control" id="lolplay_id" placeholder="Youtube id" name="lolplay[id]" value="<%= lolplay.videoId %>">
    </div>
    <div class="form-group">
      <label for="lolplay_description">Description</label>
      <textarea class="form-control" id="lolplay_description" name="lolplay[description]" placeholder="Description"><%= lolplay.description %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</section>
