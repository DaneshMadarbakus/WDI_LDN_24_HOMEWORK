<section class="container">
  <h1>All LOLPlays</h1>
  <% lolplays.forEach((lolplay, i, original) => { %>
    <% if (i === 0) { %>
      <div class="row">
    <% } else if (i !== 0 && i % 3 === 0) { %>
      <div class="row">
    <% }; %>
      <div class="col-md-4">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= lolplay.title %></h3>
            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= lolplay.videoId %>?modestbranding=1&autohide=1&showinfo=0&controls=0" frameborder="0" allowfullscreen></iframe>
            <p><%= lolplay.description %></p>
            <p><a href="/lolplays/<%= lolplay._id %>" class="btn btn-primary" role="button">View</a></p>
          </div>
        </div>
      </div>
    <% if (i === original.length-1) { %>
      </div>
    <% }; %>
  <% }); %>
</section>
